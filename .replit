# Replit configuration for serving the static site with Node.js
# The modules array enables the Node.js 20 runtime and web preview pane.
modules = ["nodejs-20", "web"]

# Command executed when the Run button is pressed. It ensures the `serve`
# package is available globally and then starts a static server bound to
# 0.0.0.0 using the Replit-assigned $PORT so the preview opens automatically.
run = "npm install -g serve && npx serve -s . -l $PORT"

# Keep the AI coding agent available in expert mode for this repl.
[agent]
expertMode = true

# Use the current stable Nix channel for reproducible builds.
[nix]
channel = "stable-25_05"
