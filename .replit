
# Replit configuration for serving the static site with Node.js
# The modules array enables the Node.js 20 runtime and web preview pane.
modules = ["nodejs-20", "web"]

# Configure the Run button to launch a workflow that serves the static site
# with `serve` bound to port 5000 so the Replit preview can connect.
[workflows]
runButton = "Static Site"

[[workflows.workflow]]
name = "Static Site"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx --yes serve@latest -s . -l tcp://0.0.0.0:5000"
waitForPort = 5000

# Keep the AI coding agent available in expert mode for this repl.
[agent]
expertMode = true

# Use the current stable Nix channel for reproducible builds.
[nix]
channel = "stable-25_05"

[[ports]]
localPort = 5000
externalPort = 80
